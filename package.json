{
  "name": "ts-adventures",
  "version": "1.0.0",
  "description": "TypeScript explorations",
  "main": "dist/index.js",
  "author": "Eckhardt Dreyer <@eckhardtdreyer>",
  "license": "MIT",
  "private": true,
  "bin": {
    "ts-adventures": "bin/ts-adventures"
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "dev:cli": "yarn build:cli --watch && yarn build:main --watch",
    "dev:main": "yarn build:main --watch",
    "build:main": "esbuild src/main.ts --bundle --platform=node --outfile=dist/main.js",
    "build:cli": "esbuild src/cli.ts --bundle --platform=node --outfile=dist/cli.js",
    "build": "yarn build:cli && yarn build:main",
    "cli:install": "npm i -g ."
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "esbuild": "^0.14.12",
    "eslint": "^8.7.0",
    "jest": "^27.4.7",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "boxen": "^6.2.1",
    "chalk": "^5.0.0",
    "yargs": "^17.3.1"
  }
}
